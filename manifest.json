{
  "manifest_version": 3,
  "name": "Typingo",
  "version": "1.0",
  "description": "Real time streaming media translation",
  "action": {
    "default_icon": "favicon-48x48.png",
    "default_popup": "index.html"
  },
  "permissions": ["activeTab", "tabCapture", "sidePanel", "offscreen", "storage", "identity"],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"]
    }
  ]
}
