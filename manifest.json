{
  "manifest_version": 3,
  "name": "AST",
  "version": "1.0",
  "description": "Automatic Speech Translation.",
  "action": {
    "default_popup": "index.html",
    "default_icon": "public/vite.svg"
  },
  "permissions": ["activeTab", "storage", "scripting", "tabs", "debugger", "tabCapture"],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"]
    }
  ]
}
